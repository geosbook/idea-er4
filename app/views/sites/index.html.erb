<h1>Listing sites</h1>

<table class="table table-bordered">
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.type %></td>
        <td><%= site.lat %></td>
        <td><%= site.lng %></td>
        <td><%= site.status %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

<br>

