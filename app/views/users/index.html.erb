<% provide(:title, 'All users')%>
<h1>All users</h1>
<table class="table table-bordered">
  <tr>
    <th>Avatar</th>
    <th>Name</th>
    <th>Email</th>
    <th>Ass. Role</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= gravatar_for user, size: 52 %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <% if user.role_id != nil %>
    <% @role = Role.find(user.role_id)%>
    <td><%= @role.name %></td>
    <% else %>
    <td>-</td>
    <% end %>
    <td><%= button_to 'Change', edit_user_path(user), :class=>"btn", :method=>:put %></td>
    <td><%= button_to 'Delete',{:controller=> 'users', :id=> user.id,:action=> 'destroy'} , :class=>"btn btn-primary", :method=>:delete %></td>
  </tr>
<% end %>



</table>

<%= link_to 'New User',new_user_path %>
